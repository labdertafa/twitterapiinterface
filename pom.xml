    <url>https://github.com/labdertafa/twitterapiinterface</url>
    <licenses>
        <license>
            <name>MIT License</name>
            <url>https://opensource.org/licenses/MIT</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <scm>
        <url>https://github.com/labdertafa/twitterapiinterface</url>
        <connection>scm:git:git://github.com/labdertafa/twitterapiinterface.git</connection>
        <developerConnection>scm:git:ssh://git@github.com:labdertafa/twitterapiinterface.git</developerConnection>
